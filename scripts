import os

template_cpp = """#include <algorithm>
#include <bitset>
#include <cassert>
#include <climits>
#include <cmath>
#include <complex>
#include <cstdio>
#include <cstdlib>
#include <cstring>
#include <deque>
#include <fstream>
#include <functional>
#include <iomanip>
#include <iostream>
#include <limits>
#include <list>
#include <map>
#include <numeric>
#include <queue>
#include <set>
#include <sstream>
#include <stack>
#include <string>
#include <unordered_map>
#include <unordered_set>
#include <utility>
#include <vector>
using namespace std;

int main() {

  Solution sol;
  auto input;

  auto ans = sol.SampleFunc();
  assert(ans == xxx);

  return 0;
}
"""


template_py = """
from typing import Optional

sol = Solution()
myans = sol.Func()
ans = 0
assert(ans == myans)
print("(1) passed")

"""


# example question URL
# https://leetcode.com/problems/longest-common-subsequence/
# https://leetcode.com/problems/two-sum/description/

# get slug and number and language
question_slug = input("Question URL? ").split("/")[4]
question_number = input("Question number? ")
question_language = input("Question language [cpp/py] ? ")

dir_name = question_number + "." + question_slug
file_name = question_number + "." + question_language
os.mkdir(dir_name)

makefile = """
all: {}
	clang++ {} -o solu --std=c++20 && ./solu && rm solu
clean:
	rm solu
""".format(file_name, file_name)


with open(os.path.join(dir_name, file_name), "w") as f:
    if question_language == "cpp":
        f.write(template_cpp)
    elif question_language == "py":
        f.write(template_py)

with open(os.path.join(dir_name, "makefile"), "w") as f:
    f.write(makefile)


print("Problem directory -> " + os.path.join(dir_name) + " created.")






